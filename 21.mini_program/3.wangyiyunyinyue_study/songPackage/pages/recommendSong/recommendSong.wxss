/* pages/recommendSong/recommendSong.wxss */

@import "/static/iconfont/iconfont.wxss";
/*头部样式*/
.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.recommendSongContainer .header image{
  width: 100%;
  height: 300rpx;
}

.recommendSongContainer .header .date {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -150rpx;
  margin-top: -50rpx;

  width: 300rpx;
  height: 100rpx;
  color: white;
  text-align: center;
  line-height: 100rpx;
}

.header .date .day{
  font-size: 38rpx;
}

/*列表区域*/
.ListContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: white;
}
.listHeader{
  height: 80rpx;
  line-height: 80rpx;
}

.listHeader .changeMore{
  float: right;
}

/*内容区*/
.listScroll{
  height: calc(100vh - 380rpx);
}

.scrollItem{
  display: flex;
  position: relative;
}

.scrollItem image{
  width: 80rpx;
  height: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.scrollItem .iconfont{
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}

.musicInfo{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;

}

.musicInfo text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;

  /*文本过长省略*/
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

